<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_left"
        tools:text="LOL"
        android:textColor="#ffffff"
        android:paddingRight="5dp"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timestamp_left"
        android:layout_below="@id/text_view_left"
        android:paddingLeft="5dp"
        tools:text="Date"
        android:textSize="15sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/polarity_symbol_left"
        android:layout_below="@id/text_view_left"
        android:layout_toRightOf="@id/timestamp_left"
        android:layout_toEndOf="@id/timestamp_left"
        tools:text="+"
        android:textSize="15sp"/>

</RelativeLayout>